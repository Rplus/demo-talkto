section.slider.mxa
  h1.slider-head
    .container
      img.logo.logo--index.float-right(src="/images/logo/logo.svg", alt="政問 logo", width="102", height="128")
      .share-btns.float-left
        a.share-btn.share-btn--facebook
          +svg-icon('sns-facebook')
        a.share-btn.share-btn--twitter
          +svg-icon('sns-twitter')

  .slider-body
    each program, index in programs
      if program.program_topic
        div.slider-content(style="background-image: url('/images/slider/program#{program.program_number_full}_thumb.jpg')")
          a.slider-link(href="/talk/#{program.program_number_full}.html")
          .container
            .program-info
              .program__guest.text-pink=program.guest
              .program__title!=program.title.replace(/，/, '<br>')
              time.program__time.text-gray 12 月 23 日（三）21:00 – 21:30
              if program.polis_result
                a.program__link.px3(href="###", title="觀看節目彙整 →") 觀看節目彙整 →
              .program__number.text-pink.text-right=program.program_number_full

  .slider-foot.mxa
    ul.slider-thumbs.list-reset
      each program, index in programs
        if program.program_topic
          li.slider-thumb(
            title="#{program.program_number_full} - #{program.program_topic} || #{program.guest}",
            style="background-image: url('/images/slider/program#{program.program_number_full}_thumb.jpg')")

    button.slider-btn.slider-prev(aria-label="previous", role="button")
      +svg-icon('slider-prev', 'slick-arrow')
    button.slider-btn.slider-next(aria-label="next", role="button")
      +svg-icon('slider-prev', 'slick-arrow')
